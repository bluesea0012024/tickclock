.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 30rpx;
}

.progress {
  font-size: 32rpx;
  color: #333;
}

/* 使用指导 */
.instruction {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.instruction-text {
  font-size: 28rpx;
  color: #666;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ddd;
}

/* 时钟容器 */
.clock-container {
  position: relative;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}


.clock-canvas {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}

.target-time {
  margin: 40rpx 0;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
  padding: 25rpx 50rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

.button-group {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}

.btn {
  background-color: #3A7FE0;
  color: white;
  font-size: 36rpx;
  padding: 20rpx 40rpx;
  border-radius: 15rpx;
  margin: 0 15rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* 昵称输入弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background-color: white;
  border-radius: 10rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.confirm-btn {
  width: 60%;
}