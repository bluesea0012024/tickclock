.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 20rpx 140rpx 20rpx; /* 增加底部内边距以适应底部导航 */
  min-height: 100vh;
  /* 恢复原始的彩色彩虹渐变主题背景 */
  background: linear-gradient(135deg, 
    #FFE5B4 0%,   /* Peach puff */
    #FFB6C1 25%,  /* Light pink */
    #B6E5D8 50%,  /* Aquamarine */
    #DDA0DD 75%,  /* Plum */
    #F0E68C 100%  /* Khaki */
  );
  background-attachment: fixed;
}

.header {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 30rpx;
  padding-right: 20rpx;
}

.progress {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

/* 使用指导 */
.instruction {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.instruction-text {
  font-size: 32rpx;
  color: #FF6B6B; /* Coral color from the button gradient to match the theme */
  background: rgba(255, 255, 255, 0.85); /* Light background for contrast */
  padding: 15rpx 30rpx;
  border-radius: 20rpx; /* Rounded corners */
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1); /* Subtle shadow */
  backdrop-filter: blur(8rpx); /* Glass morphism effect */
  border: 1rpx solid rgba(255, 107, 107, 0.2); /* Light coral border */
  font-weight: 600; /* Slightly bolder for better visibility */
  /* 将指导文本上移 20px */
  transform: translateY(-20px);
  text-align: center; /* Ensure text is centered */
}

/* 时钟容器 */
.clock-container {
  position: relative;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 添加时钟外围阴影效果，匹配昨天的设计 */
  filter: drop-shadow(0 8rpx 25rpx rgba(0, 0, 0, 0.15));
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
}


.clock-canvas {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}

.target-time {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
  font-size: 36rpx; /* Slightly reduced size for better balance */
  font-weight: 600; /* Increased weight for better visibility */
  color: #4ECDC4; /* Turquoise color to match the restart button and theme */
  background: rgba(255, 255, 255, 0.85); /* Lighter background for better contrast */
  padding: 20rpx 40rpx; /* Reduced padding for a more compact look */
  border-radius: 20rpx; /* Slightly reduced border radius */
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12); /* Slightly reduced shadow */
  backdrop-filter: blur(8rpx); /* Slightly reduced blur effect */
  border: 1rpx solid rgba(78, 205, 196, 0.2); /* Lighter border with theme color */
  /* 移除浮动动画，保持文本静止 */
}

.clock-icon {
  font-size: 32rpx; /* Slightly reduced size */
  margin-right: 12rpx; /* Reduced margin */
  filter: drop-shadow(0 2rpx 3rpx rgba(0, 0, 0, 0.15)); /* Slightly reduced shadow */
  color: #FF8E53; /* Orange color to match the confirm button gradient */
}

.button-group {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
  /* 将按钮组作为整体上移 55px (原25px + 30px) */
  transform: translateY(-25px);
}

.btn {
  font-size: 32rpx;
  padding: 20rpx 40rpx; /* 减少按钮宽度 */
  border-radius: 25rpx;
  margin: 0 25rpx; /* 增加按钮间距到 25rpx */
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  border: none;
  transition: all 0.3s ease;
  font-weight: 600;
  /* 添加微妙的变换效果 */
  transform: translateZ(0);
  will-change: transform, box-shadow;
}

/* 确认按钮 - 珊瑚/橙色渐变，匹配参考图片 */
.btn:nth-child(1) {
  background: linear-gradient(135deg, #FF6B6B, #FF8E53);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.35);
}

/* 重新开始按钮 - 特定的青绿到蓝色渐变，符合UI规范 */
.btn:nth-child(2) {
  background: linear-gradient(135deg, #4ECDC4, #45B7D1);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(78, 205, 196, 0.4); /* 青绿色阴影效果 */
}

/* 查看奖状按钮 - 紫色渐变，增强视觉效果 */
.btn:nth-child(3) {
  background: linear-gradient(135deg, #A29BFE, #6C5CE7);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(108, 92, 231, 0.35);
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* 按钮悬停效果 */
.btn:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.2);
}

/* 昵称输入弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background-color: white;
  border-radius: 10rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.confirm-btn {
  width: 60%;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(248, 249, 250, 0.9));
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 40rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  /* 左移20px */
  transform: translateX(-20px);
}

.nav-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: scale(0.95);
  opacity: 0.7;
}

.nav-text {
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
}

/* 汉诺塔 - 软粉色 */
.nav-item:nth-child(1) .nav-text {
  color: #FFB5B5;
}

/* 乘法口诀 - 软天蓝色 */
.nav-item:nth-child(3) .nav-text {
  color: #B5D8FF;
}

/* 口算练习 - 软薪荷绿色 */
.nav-item:nth-child(5) .nav-text {
  color: #B5E8D8;
}

/* 生字预习 - 软薰衣草紫色 */
.nav-item:nth-child(7) .nav-text {
  color: #D8B5FF;
}

.nav-separator {
  color: rgba(0, 0, 0, 0.15);
  font-size: 22rpx;
  margin: 0 10rpx;
  font-weight: 300;
}